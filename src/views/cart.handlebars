<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Mi Carrito de Compras</title>
</head>
<body>
    <header>
        <h1>Mi Carrito de Compras</h1>
    </header>

    <main>
        <section id="resumen-carrito">
            <h2>Resumen del Carrito</h2>
            <div id="detalles-carrito"></div>
            <table>
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="productos-carrito">
                    {{#each cart.products}}
                    <tr>
                        <td>{{this.product.title}}</td>
                        <td>{{this.product.price}}</td>
                        <td>
                            <button class="remove-product" data-id="{{this.product._id}}">-</button>
                            <span>{{this.quantity}}</span>
                            <button class="add-product" data-id="{{this.product._id}}">+</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="botones-carrito">
                <button id="vaciar-carrito" data-id="{{cart._id}}">Eliminar Todo</button>
                <button id="regresar" onclick="window.history.back()">Regresar</button>
            </div>
            <span id="mensaje-error" class="mensaje-error"></span>
        </section>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/api/public/js/cart.socket.js"></script>
</body>
</html>
